<!DOCTYPE html>
<html>
  <head>
    <title>Jugo Juciery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
      <!-- Bootstrap tooltips -->
    <script src="js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script src="js/mdb.min.js"></script>
    <!--Google Maps-->
    <script src="https://maps.google.com/maps/api/js"></script>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <!--Main Navigation-->
        <!--Navbar-->
       <nav class="navbar navbar-expand-lg navbar-light white">

    <!-- Collapse button -->
       <%= link_to root_path, class: "navbar-brand" do %>
       <img src="https://s3.amazonaws.com/ngpwebsite/jugoLogo2.jpg" height="30" class="animated jello infinite d-inline-block align-top" alt="">
       <%= content_tag :i, "JUGO JUICERY" %>
       <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <!-- Links -->
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                             <a class="nav-link waves-light dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-file-text-o">MENU</i></a>
                             <div class="dropdown-menu dropdown-primary" aria-labelledby="navbarDropdownMenuLink">
                                <%= link_to "Cold Pressed Juices", juices_path, class: "dropdown-item" %>
                                <%= link_to "Smoothies", smoothies_path, class: "dropdown-item" %>
                                <%= link_to "Bowls", bowls_path, class: "dropdown-item" %>
                                <%= link_to "Coffee", coffee_path, class: "dropdown-item" %>
                                <%= link_to "Catering", catering_path, class: "dropdown-item" %>
                           </div>
                        </li>
                        <li class="nav-item">
                                <%= link_to home_path, class: "nav-link waves-light" do %>
                                <%= content_tag :i, "HOME", :class => "fa fa-home", :'aria-hidden' => "true" %>
                                <% end %>
                        </li>
                        <li class="nav-item">
                            <%= link_to team_path, class: "nav-link waves-light" do %>
                                <%= content_tag :i, "OUR SQUAD", :class => "fa fa-group", :'aria-hidden' => "true" %>
                                <% end %>
                        </li>
                        <li class="nav-item">
                            <%= link_to locationsNhours_path, class: "nav-link waves-light" do %>
                                <%= content_tag :i, "LOCATIONS+HOURS", :class => "fa fa-map", :'aria-hidden' => "true" %>
                                <% end %>
                        </li>
                        <li class="nav-item">
                            <%= link_to careers_path, class: "nav-link waves-light" do %>
                                <%= content_tag :i, "CAREERS", :class => "fa fa-street-view", :'aria-hidden' => "true" %>
                                <% end %>
                        </li>
                        <li class="nav-item">
                            <%= link_to franchises_path, class: "nav-link waves-light" do %>
                                <%= content_tag :i, "FRANCHISES", :class => "fa fa-handshake-o", :'aria-hidden' => "true" %>
                                <% end %>
                        </li>
                        <!-- Dropdown -->
                        
                    </ul>
                    <!-- Links -->
                    <ul class="navbar-nav nav-flex-icons ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="https://www.facebook.com/JUGOJUICERY"><i class="fa fa-facebook" aria-hidden="true"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="https://www.instagram.com/jugojuicery"><i class="fa fa-instagram" aria-hidden="true"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="https://twitter.com/jugojuicery?lang=en"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </li>
        </ul>
                </div>
                <!-- Collapsible content -->
            
        </nav>
        
        <!--/.Navbar-->
    <%= yield %>
    
    
    <!--Footer-->
    <!-- SCRIPTS -->
    <!-- JQuery -->
    
    <!-- Google Maps settings -->
    
    <!-- Carousel options -->
    <script>
    $('.carousel').carousel({
        interval: 5000,
    })
    </script>
  </body>
</html>
